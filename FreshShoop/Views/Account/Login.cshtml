@model FreshShoop.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_mainPage.cshtml";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="Post">
                <h1 class="text-center">Login</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" placeholder="name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            
                <div class="form-group mt-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                    <label>Don't have an account? </label><a asp-controller="Account" asp-action="Register"> Sign up</a>

                </div>
            </form>
        </div>
    </div>

</div>
