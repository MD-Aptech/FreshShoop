@model FreshShoop.ViewModel.ProductEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_admin.cshtml";

}
<div class="container mx-5">

    <h1>Edit</h1>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
               <div class="row">
                <div class="col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Image1" class="control-label"></label>
                    <input asp-for="Image1" type="file" class="form-control" />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
               </div>
               <div class="row">

                <div class="col-md-6">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Image3" class="control-label"></label>
                    <input asp-for="Image3" type="file" class="form-control" />
                    <span asp-validation-for="Image3" class="text-danger"></span>
                </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"  row="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">

                <div class="col-md-4">
                    <label asp-for="Qunatity" class="control-label"></label>
                    <input asp-for="Qunatity" class="form-control" />
                    <span asp-validation-for="Qunatity" class="text-danger"></span>
                </div>
                    <div class="col-md-4">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                    <div class="col-md-4">
                    <label asp-for="SalePrice" class="control-label"></label>
                    <input asp-for="SalePrice" class="form-control" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @* <input asp-for="CategoryId" class="form-control" /> *@
                    <select asp-for ="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.CategoryId, "Id", "Name"))"></Select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Satatus" class="control-label"></label>
                    @* <input asp-for="Satatus" class="form-control" /> *@
                <input asp-for="Satatus"  value="Active" class="form-control" />
                    <span asp-validation-for="Satatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
